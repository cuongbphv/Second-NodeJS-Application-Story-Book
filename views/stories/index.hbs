<h1>Stories</h1>
<div class="row">
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{#if user}} 
                    {{{showIcon user.id ../user.id id 1}}} 
                {{/if}}
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <!-- Viết hàm trong html nếu chỉ có 1 tham số () còn nhiều tham số thì ghi cách ra -->
                <p class="story-text">{{stripTags (truncate body 150)}}</p>
                <br>
                <div class="chip">
                        <img src="{{user.avatar}}" alt="No image"> 
                        <a href="/stories/user/{{user.id}}">
                            {{user.firstName}} {{user.lastName}}
                        </a>
                </div>
            </div>
            <div class="card-action center-align">
                <a class="btn grey" href="/stories/show/{{id}}">Read More</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No stories found</p>
    {{/each}}
</div>