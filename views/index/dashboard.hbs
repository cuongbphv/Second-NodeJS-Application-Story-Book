<h4>Manage your Stories</h4>
{{#if stories}}
<table class="striped centered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th>Allow Comment</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td>
                <a href="/stories/show/{{id}}">{{title}}</a>
            </td>
            <td>{{formatDate date 'Do MMMM YYYY'}}</td>
            <td>
                <span class="dash-status">{{status}}</span>
            </td>
            <td>
                <span class="dash-status">{{tranText allowComments}}</span>
            </td>
            <td>
                <a class="btn left-align" href="/stories/edit/{{id}}">
                    <i class="fa fa-pencil"></i>
                </a>

                <form action="/stories/{{id}}?_method=DELETE" method="post" id="delete-form">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn red">
                        <i class="fa fa-remove"></i>
                    </button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not created any stories yet</p>
{{/if}}